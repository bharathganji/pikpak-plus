# Do not change this
FLASK_APP = app.py 
FLASK_DEBUG = 1 

# pikpak email, password (Required)
user= example@example.com
passwd= example


# Supabse Project URL, anon public-key (Required)
SUPABASE_URL = https://example.supabase.co
SUPABASE_KEY = example string key

# optional 
proxy=

# GH_TOKEN (optional)
GH_TOKEN=

# File Size Limit (in GB) - Maximum file size allowed for downloads (optional)
# Uses whatslink.info API to check file sizes before creating tasks
# Default: 25 GB
MAX_FILE_SIZE_GB = 25

# Task Scheduler Configuration (optional)
# Task status update interval in minutes - how often to check and update task statuses
# Default: 15 minutes
TASK_STATUS_UPDATE_INTERVAL_MINUTES = 15

# Cleanup interval in hours - how often to run the cleanup job
# Default: 24 hours (once per day)
CLEANUP_INTERVAL_HOURS = 24

# Task retention in hours - how long to keep tasks before cleanup
# Default: 24 hours
TASK_RETENTION_HOURS = 24

# Cache Configuration (optional)
# Cache TTL in seconds - how long to cache API responses
# Default: 300 seconds (5 minutes)
TASK_CACHE_TTL_SECONDS = 300

# Quota cache TTL in seconds - how long to cache quota information
# Default: 10800 seconds (3 hours)
QUOTA_CACHE_TTL_SECONDS = 10800

# Pagination Configuration (optional)
# Default page size for task lists
# Default: 25 items per page
DEFAULT_PAGE_SIZE = 25

# WebDAV Auto-Generation Configuration (optional)
# How often to generate new WebDAV clients in hours
# Default: 24 hours (once per day)
WEBDAV_GENERATION_INTERVAL_HOURS = 24

# Redis Configuration (optional)
# Redis URL for caching - defaults to local Redis server
REDIS_URL = redis://localhost:6379/0
